businessWorkflow
  foo_XML_Input()
    XMLSource := {BT.Mime,FileName}
    ProcessingMode := strict
    ValidateSchema := true
  configuration
    DefaultOrigin :== 2
    MaxRetries :== 5
    EnableLogging :== true
    ConnectionTimeout :== 30
  dataProcessing
    foo_ProcessXML()
      InputFile := {$XMLSource}
      OutputFormat := JSON
      Encoding := UTF-8
    foo_TransformData()
      TransformationType := XSL
      StylesheetPath := /path/to/stylesheet.xsl
  variables
    ProcessedCount :== 0
    ErrorCount :== 0
    LastProcessedTime :== 
  if development
    LogLevel :== DEBUG
    EnableTracing :== true
  if premium
    advancedProcessing()
      UseAI := true
      MaxConcurrency := 10
    PremiumMode :== enabled
  if testing
    testingTools(name="QualityAssurance")
      RunTests := true
      TestMode :== unit
  if debug
    DebugEnabled := true
  if config
    ConfigPath :== /etc/config.xml
  if advanced
    parameter(name="AdvancedParam", type="boolean") = false
  if system
    variable(name="SystemVar", readonly="true") = system_value
  WorkflowEngine::ProcessWorkflow(name="ProcessWorkflowData")
    enableAutoProcess := true
    maxRetries :== 3
  ValidationService::ValidateInput()
    strictMode := false
  command.startelement
    element := root
    attributes := xmlns="http://example.com"
  command.endelement
    element := root
  command.textelement
    content := Some text content
  command.startelement(priority="high")
    element := important
  each dataItem in /ROOT/CONTAINER/ITEMS/ITEM/ENTRIES/ENTRY
    dataProcessing
      processItem := true
      itemCount :== 0
  each record in /path/to/records
    section
      id := recordId
      status :== active
  each item
    container
      name := itemName
      processed :== false
  each entry in /data/entries
    processor(id="main", priority="high")
      mode := batch
      batchSize :== 100
