configuration
  database
    host = localhost
    port = 5432
    username = admin
    password = secret123
    ssl(enabled="true")
      cert-path = /path/to/cert.pem
      key-path = /path/to/key.pem
  logging
    level = INFO
    output = console
    file(path="/var/log/app.log", rotate="daily")
  features
    feature(enabled="true", name="authentication")
    feature(enabled="false", name="caching")
    feature(enabled="true", name="monitoring")
  servers
    server(type="web")
      name = web-01
      ip = 192.168.1.10
      resources
        cpu = 4
        memory = 8192
        disk = 500
    server(type="api")
      name = api-01
      ip = 192.168.1.11
      resources
        cpu = 8
        memory = 16384
        disk = 1000
